#!/bin/bash

# Ensure we are in the root of the git repository
cd "$(git rev-parse --show-toplevel)"

# Update references
git fetch --prune

# List all merged branches except main
echo "ğŸ” Finding local branches merged into main..."
if git show-ref --verify --quiet refs/heads/main; then
  merged=$(git branch --merged main | grep -v 'main' | grep -v '\*')

  if [ -z "$merged" ]; then
    echo "âœ… No merged branches to delete."
  else
    echo "ğŸ—‘ï¸ Deleting merged local branches:"
    echo "$merged"
    echo "$merged" | xargs -n 1 git branch -d
  fi
else
  echo "âš ï¸ 'main' branch not found locally. Skipping local cleanup."
fi

# Clean up remote-tracking branches that no longer exist on the remote
echo "ğŸ§¹ Pruning remote-tracking branches..."
git remote prune origin

echo "âœ¨ Branch cleanup complete."