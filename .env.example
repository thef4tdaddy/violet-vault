# VioletVault Environment Variables

# Firebase Configuration
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-firebase-auth-domain
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-firebase-storage-bucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your-firebase-messaging-sender-id
VITE_FIREBASE_APP_ID=your-firebase-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-firebase-measurement-id

# Firebase Cloud Messaging (Optional)
VITE_FIREBASE_VAPID_KEY=your-firebase-vapid-key

# WebSocket Real-Time Signaling (Optional)
# Enable privacy-preserving WebSocket signaling for real-time sync notifications
# PRIVACY: WebSockets transmit SIGNALS ONLY - no decrypted data or encrypted blobs
VITE_WEBSOCKET_ENABLED=false
VITE_WEBSOCKET_URL=ws://localhost:8080

# Sentry Error Tracking (Optional)
VITE_SENTRY_DSN=your-sentry-dsn
VITE_SENTRY_ENVIRONMENT=production

# Analytics (Optional)
VITE_ANALYTICS_ENABLED=false

# Backend Configuration (Vercel Serverless Functions)
# GitHub Integration for Bug Reports
GITHUB_TOKEN=your-github-personal-access-token
BUG_REPORT_ALLOWED_ORIGINS=http://localhost:5173,https://your-domain.vercel.app

# Codecov Bundle Analysis
CODECOV_TOKEN=your-codecov-upload-token

# Development Settings
VITE_DEV_MODE=false
