# Staging Environment Configuration
# VioletVault Staging Settings (for testing before production)

# App Environment
VITE_APP_ENV=staging
VITE_APP_VERSION=1.6.1-staging

# Error Tracking & Analytics (Staging/Dev/Vercel Previews)
# LogRocket configuration for staging and development (shared app ID)
VITE_LOGROCKET_APP_ID=your-dev-staging-app-id-here

# Error Reporting Configuration (Higher sampling for testing)
VITE_ERROR_REPORTING_ENABLED=true
VITE_ERROR_SAMPLE_RATE=1.0
VITE_SESSION_SAMPLE_RATE=1.0

# Legacy (to be removed after migration)
VITE_HIGHLIGHT_PROJECT_ID=your-staging-project-id-here
VITE_SENTRY_DSN=your-staging-sentry-dsn-here

# Debug Settings (Enabled for testing)
VITE_DEBUG_MODE=true
VITE_VERBOSE_LOGGING=true

# Staging Features
VITE_ENABLE_DEV_TOOLS=true
VITE_SKIP_AUTH_IN_DEV=false

# Testing Settings
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true