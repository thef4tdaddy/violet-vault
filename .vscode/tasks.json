{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ğŸ¨ Format Code",
      "type": "shell",
      "command": "npm",
      "args": ["run", "format"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸ” Lint Code",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "ğŸ”§ Lint Fix",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint:fix"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "ğŸ”¨ Build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "ğŸš€ Dev Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "\\s*vite",
          "endsPattern": "Local:\\s+http://localhost:\\d+"
        }
      }
    },
    {
      "label": "ğŸ‘€ Preview Build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "preview"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "dependsOn": "ğŸ”¨ Build",
      "isBackground": true
    },
    {
      "label": "ğŸ§¹ Clean Build",
      "type": "shell",
      "command": "rm",
      "args": ["-rf", "dist"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "ğŸŒ¿ Create Branch",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/create-branch.sh",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸ”„ Rebase Branch",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/rebase-super-script",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸ§¹ Clean Branches",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/clean-branches",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸ§ª Deploy Staging",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/deploy-staging.sh",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸš€ Deploy Production",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/deploy-production.sh",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸ’¾ Backup Data",
      "type": "shell",
      "command": "node",
      "args": ["${workspaceFolder}/scripts/backup-data.js"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸ¯ Deploy Manager",
      "type": "shell",
      "command": "node",
      "args": [
        "${workspaceFolder}/scripts/deploy.js",
        "${input:deployEnvironment}"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸ”„ Rollback Manager",
      "type": "shell",
      "command": "node",
      "args": [
        "${workspaceFolder}/scripts/rollback.js",
        "${input:rollbackTarget}"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸ“‹ Git Status",
      "type": "shell",
      "command": "git",
      "args": ["status", "--short"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸŒ³ Git Branch Info",
      "type": "shell",
      "command": "git",
      "args": ["branch", "-vv"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸ“Š Git Log",
      "type": "shell",
      "command": "git",
      "args": ["log", "--oneline", "-10"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "âœ¨ Format & Lint",
      "dependsOrder": "sequence",
      "dependsOn": ["ğŸ¨ Format Code", "ğŸ” Lint Code"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "ğŸš¢ Full Deploy Staging",
      "dependsOrder": "sequence",
      "dependsOn": ["âœ¨ Format & Lint", "ğŸ”¨ Build", "ğŸ§ª Deploy Staging"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      }
    },
    {
      "label": "ğŸ¯ Full Deploy Production",
      "dependsOrder": "sequence",
      "dependsOn": ["âœ¨ Format & Lint", "ğŸ”¨ Build", "ğŸš€ Deploy Production"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      }
    },
    {
      "label": "ğŸ”§ Pre-commit Checks",
      "dependsOrder": "sequence",
      "dependsOn": ["ğŸ¨ Format Code", "ğŸ”§ Lint Fix", "ğŸ”¨ Build"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "id": "deployEnvironment",
      "description": "Deployment Environment",
      "type": "pickString",
      "options": ["development", "staging", "production"],
      "default": "staging"
    },
    {
      "id": "rollbackTarget",
      "description": "Rollback Target",
      "type": "pickString",
      "options": ["commit", "tag", "backup"],
      "default": "commit"
    }
  ]
}
