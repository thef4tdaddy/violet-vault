{
  "git": {
    "deploymentEnabled": {
      "main": true,
      "develop": true
    }
  },
  "installCommand": "npm ci",
  "buildCommand": "npm ci && if [ \"$VERCEL_ENV\" == \"preview\" ]; then npm run build:dev; else npm run build; fi",
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, s-maxage=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(index.html|favicon.ico|manifest.webmanifest)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=3600, stale-while-revalidate=86400"
        }
      ]
    },
    {
      "source": "/api/(health|status|version)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=60, stale-while-revalidate=600"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), midi=(), sync-xhr=(), microphone=(), camera=(), magnetometer=(), gyroscope=(), fullscreen=(), payment=()"
        }
      ]
    }
  ],
  "images": {
    "sizes": [640, 750, 828, 1080, 1200, 1920, 2048, 3840],
    "domains": [],
    "minimumCacheTTL": 60,
    "formats": ["image/avif", "image/webp"],
    "dangerouslyAllowSVG": true,
    "contentSecurityPolicy": "default-src 'self';img-src 'self' data: https://media.dev.to https://avatars.githubusercontent.com https://res.cloudinary.com;connect-src 'self' https://api.github.com;script-src 'self' 'unsafe-inline';style-src 'self' 'unsafe-inline'",
    "remotePatterns": []
  },
  "rewrites": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "demo.violetvault.app"
        }
      ],
      "destination": "/index.html?demo=true"
    },
    {
      "source": "/api/marketing/blog",
      "destination": "/api/marketing/blog.go"
    },
    {
      "source": "/api/marketing/go_status",
      "destination": "/api/marketing/go_status.go"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/main.py"
    },
    {
      "source": "/((?!api|assets|favicon.ico|manifest.webmanifest|sw.js|workbox-).*)",
      "destination": "/index.html"
    }
  ]
}
