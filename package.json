{
  "name": "violetvault",
  "private": true,
  "version": "1.8.0",
  "type": "module",
  "description": "A secure, encrypted envelope budgeting application with end-to-end encryption and real-time collaboration",
  "license": "CC-BY-NC-SA-4.0",
  "author": "VioletVault Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/thef4tdaddy/violet-vault.git"
  },
  "bugs": {
    "url": "https://github.com/thef4tdaddy/violet-vault/issues"
  },
  "homepage": "https://github.com/thef4tdaddy/violet-vault#readme",
  "keywords": [
    "budgeting",
    "envelope-system",
    "personal-finance",
    "encryption",
    "privacy",
    "react",
    "pwa"
  ],
  "scripts": {
    "dev": "vite --mode development",
    "dev:staging": "vite --mode staging",
    "build": "vite build --mode production",
    "build:staging": "vite build --mode staging",
    "build:dev": "vite build --mode development",
    "preview": "vite preview",
    "preview:staging": "vite preview --mode staging",
    "lint": "eslint . --config ./configs/eslint.config.js --max-warnings 50",
    "lint:fix": "eslint . --config ./configs/eslint.config.js --fix",
    "format": "prettier --config ./configs/prettier.config.js --write \"{src,docs}/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --config ./configs/prettier.config.js --check \"{src,docs}/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "prepare": "husky",
    "commit": "git add . && git commit",
    "check-commit": "commitlint --config ./configs/commitlint.config.cjs --from HEAD~1 --to HEAD --verbose",
    "deploy:staging": "npm run build:staging && npm run deploy:upload",
    "deploy:production": "npm run build && npm run deploy:upload",
    "deploy:upload": "echo 'Upload dist/ to your hosting provider'",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:ci": "vitest run --coverage",
    "test:manual": "echo 'Run manual testing checklist'",
    "backup:data": "node scripts/backup-data.js"
  },
  "dependencies": {
    "@highlight-run/react": "^19.0.23",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.29.0",
    "@tanstack/react-virtual": "^3.13.12",
    "dexie": "^3.2.5",
    "firebase": "^12.0.0",
    "highlight.run": "^9.18.23",
    "html2canvas": "^1.4.1",
    "lightningcss": "^1.30.1",
    "lucide-react": "^0.525.0",
    "qrcode": "^1.5.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "recharts": "^3.1.0",
    "tailwindcss": "^4.1.11",
    "vite-plugin-pwa": "^1.0.2",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "prettier": "^3.6.2",
    "vite": "^7.0.6",
    "vitest": "^2.1.8"
  }
}
