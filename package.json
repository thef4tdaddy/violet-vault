{
  "name": "violetvault",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "A secure, encrypted envelope budgeting application with end-to-end encryption and real-time collaboration",
  "license": "CC-BY-NC-SA-4.0",
  "author": "VioletVault Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/thef4tdaddy/violet-vault.git"
  },
  "bugs": {
    "url": "https://github.com/thef4tdaddy/violet-vault/issues"
  },
  "homepage": "https://github.com/thef4tdaddy/violet-vault#readme",
  "keywords": [
    "budgeting",
    "envelope-system",
    "personal-finance",
    "encryption",
    "privacy",
    "react",
    "pwa"
  ],
  "scripts": {
    "dev": "vite --mode development",
    "dev:staging": "vite --mode staging",
    "build": "vite build --mode production",
    "build:staging": "vite build --mode staging",
    "build:dev": "vite build --mode development",
    "preview": "vite preview",
    "preview:staging": "vite preview --mode staging",
    "lint": "eslint . --config configs/linting/eslint.config.js --max-warnings 1000",
    "lint:fix": "eslint . --config configs/linting/eslint.config.js --fix",
    "lint:json": "mkdir -p docs/audits && eslint . --config configs/linting/eslint.config.js --format json > docs/audits/lint-results.json || true",
    "lint:audit": "npm run lint:json && bash scripts/sort-lint-audit.sh",
    "tsc:check": "tsc --noEmit",
    "tsc:watch": "tsc --noEmit --watch",
    "typecheck": "tsc --noEmit",
    "typecheck:raw": "mkdir -p docs/audits && tsc --noEmit > docs/audits/typecheck-results.txt || true",
    "typecheck:audit": "npm run typecheck:raw && bash scripts/sort-typecheck-audit.sh",
    "typecheck:strict": "mkdir -p docs/audits && tsc --noEmit --strict --allowJs false > docs/audits/typecheck-strict-results.txt || true",
    "typecheck:strict:audit": "npm run typecheck:strict && bash scripts/sort-typecheck-strict-audit.sh",
    "audit:full": "npm run lint:audit && npm run typecheck:audit && npm run typecheck:strict:audit && bash scripts/generate-markdown-report.sh",
    "typecheck:sw": "tsc --noEmit --project tsconfig.sw.json",
    "format": "prettier --config ./configs/linting/prettier.config.js --write \"{src,docs}/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --config ./configs/linting/prettier.config.js --check \"{src,docs}/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "prepare": "husky",
    "commit": "git add . && git commit",
    "check-commit": "commitlint --config ./configs/linting/commitlint.config.cjs --from HEAD~1 --to HEAD --verbose",
    "deploy:staging": "npm run build:staging && npm run deploy:upload",
    "deploy:production": "npm run build && npm run deploy:upload",
    "deploy:upload": "echo 'Upload dist/ to your hosting provider'",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:ci": "vitest run --coverage",
    "test:manual": "echo 'Run manual testing checklist'",
    "backup:data": "node scripts/backup-data.js"
  },
  "dependencies": {
    "@highlight-run/react": "^21.0.0",
    "@msgpack/msgpack": "^3.1.2",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-virtual": "^3.13.12",
    "bip39": "^3.1.0",
    "buffer": "^6.0.3",
    "dexie": "^4.0.11",
    "esbuild": "^0.25.9",
    "firebase": "^12.4.0",
    "highlight.run": "^9.22.3",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "lightningcss": "^1.30.1",
    "lucide-react": "^0.548.0",
    "pako": "^2.1.0",
    "qrcode": "^1.5.4",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-is": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "react-swipeable": "^7.0.2",
    "recharts": "^3.1.0",
    "tailwindcss": "^4.1.11",
    "tesseract.js": "^6.0.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/swagger-ui-react": "^5.18.0",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^4.0.5",
    "crypto-browserify": "^3.12.1",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.20",
    "fake-indexeddb": "^6.2.4",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "prettier": "^3.6.2",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "swagger-ui-react": "^5.30.0",
    "terser": "^5.43.1",
    "typescript": "^5.9.3",
    "util": "^0.12.5",
    "vite": "^7.1.11",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^4.0.4",
    "workbox-window": "^7.3.0"
  }
}
