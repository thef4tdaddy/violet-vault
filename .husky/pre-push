echo "ğŸ” Running ESLint check before push..."
npx eslint . --config configs/linting/eslint.config.js --max-warnings 25 --cache --cache-location .eslintcache

if [ $? -ne 0 ]; then
  echo "âŒ ESLint check failed! Push aborted."
  echo "ğŸ”§ Run: npm run lint:fix to auto-fix some issues"
  exit 1
fi

echo "âœ… ESLint passed!"

echo "ğŸ” Running TypeScript type check before push..."
# Ignore tsc exit code - we only care about error count vs threshold
TYPECHECK_OUTPUT=$(npx tsc --noEmit 2>&1 || true)
ERROR_COUNT=$(echo "$TYPECHECK_OUTPUT" | { grep "error TS" || true; } | wc -l | tr -d ' ')
# TODO: Reduce threshold back to 50 once the type compatibility issues between 
# Transaction/Bill/Envelope type definitions are resolved (tracked in Issue #1289)
# The 62 remaining errors are due to multiple type definitions for the same entities
# across different files (e.g., src/db/types.ts vs src/types/finance.ts)
ERROR_THRESHOLD=65

if [ "$ERROR_COUNT" -gt "$ERROR_THRESHOLD" ]; then
  echo "âŒ TypeScript errors exceed threshold! ($ERROR_COUNT > $ERROR_THRESHOLD)"
  echo "ğŸ“Š Current errors: $ERROR_COUNT"
  echo "ğŸ“ˆ Threshold: $ERROR_THRESHOLD"
  echo "ğŸ”§ Run: npm run typecheck to see all errors"
  exit 1
fi

echo "âœ… TypeScript check passed! ($ERROR_COUNT/$ERROR_THRESHOLD errors)"

echo "ğŸ—ï¸ Running production build before push..."
if ! npm run build; then
  echo "âŒ Production build failed! Push aborted."
  exit 1
fi

echo "âœ… Build succeeded!"
echo "âœ… All checks passed! Push proceeding..."
