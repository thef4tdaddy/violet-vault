#!/bin/bash
. "$(dirname -- "$0")/_/husky.sh"

# Check for --playwright flag in git options
# Note: We can't directly access git push arguments in husky,
# so we check environment or git config instead
PLAYWRIGHT_FLAG="${PLAYWRIGHT_E2E:-}"

# Also check git config for temporary flag
if git config --get-regexp "^push\.e2e" 2>/dev/null | grep -q "true"; then
  PLAYWRIGHT_FLAG="true"
  git config --unset push.e2e
fi

echo "ğŸ” Running full ESLint check before push..."

# Run ESLint on all files (not just staged)
npm run lint

if [ $? -ne 0 ]; then
  echo "âŒ ESLint failed! Push aborted."
  echo "ğŸ’¡ Fix ESLint errors and warnings before pushing."
  echo "ğŸ”§ Run: npm run lint:fix to auto-fix some issues"
  exit 1
fi

echo "âœ… ESLint passed! Push proceeding..."

# Check if E2E tests should run
if [ "$PLAYWRIGHT_FLAG" = "true" ]; then
  echo ""
  echo "ğŸ­ Running E2E smoke tests (--playwright flag detected)..."
  echo ""

  # Run E2E smoke tests
  npm run test:e2e:smoke

  if [ $? -ne 0 ]; then
    echo "âŒ E2E smoke tests failed! Push aborted."
    echo "ğŸ’¡ Fix E2E test failures before pushing."
    echo "ğŸ¬ Run: npm run test:e2e:ui for interactive debugging"
    exit 2
  fi

  echo "âœ… E2E smoke tests passed! Push proceeding..."
fi