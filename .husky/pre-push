echo "🔍 Running full ESLint check before push..."

# Run ESLint with cache and parallel processing for better performance
npx eslint . --config configs/linting/eslint.config.js --max-warnings 1000 --cache --cache-location .eslintcache

if [ $? -ne 0 ]; then
  echo "❌ ESLint failed! Push aborted."
  echo "💡 Fix ESLint errors and warnings before pushing."
  echo "🔧 Run: npm run lint:fix to auto-fix some issues"
  exit 1
fi

echo "✅ ESLint passed! Push proceeding..."