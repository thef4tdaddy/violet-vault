echo "🔍 Running ESLint check before push..."
npx eslint . --config configs/linting/eslint.config.js --max-warnings 25 --cache --cache-location .eslintcache

if [ $? -ne 0 ]; then
  echo "❌ ESLint check failed! Push aborted."
  echo "🔧 Run: npm run lint:fix to auto-fix some issues"
  exit 1
fi

echo "✅ ESLint passed!"

echo "🔍 Running TypeScript type check before push..."
# Ignore tsc exit code - we only care about error count vs threshold
TYPECHECK_OUTPUT=$(npx tsc --noEmit 2>&1 || true)
ERROR_COUNT=$(echo "$TYPECHECK_OUTPUT" | { grep "error TS" || true; } | wc -l | tr -d ' ')
ERROR_THRESHOLD=50

if [ "$ERROR_COUNT" -gt "$ERROR_THRESHOLD" ]; then
  echo "❌ TypeScript errors exceed threshold! ($ERROR_COUNT > $ERROR_THRESHOLD)"
  echo "📊 Current errors: $ERROR_COUNT"
  echo "📈 Threshold: $ERROR_THRESHOLD"
  echo "🔧 Run: npm run typecheck to see all errors"
  exit 1
fi

echo "✅ TypeScript check passed! ($ERROR_COUNT/$ERROR_THRESHOLD errors)"
echo "✅ All checks passed! Push proceeding..."
