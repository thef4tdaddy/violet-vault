# Playwright E2E Test Environment Configuration
# Used for test runs with `npm run test:e2e`

# Enable demo mode for automatic test data seeding
VITE_DEMO_MODE=true

# Firebase Configuration (Test Project)
# Use a separate Firebase test project to avoid affecting production data
VITE_FIREBASE_API_KEY=AIzaSyCTestAPIKey123456789ABCDEF
VITE_FIREBASE_AUTH_DOMAIN=violet-vault-test.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=violet-vault-test
VITE_FIREBASE_STORAGE_BUCKET=violet-vault-test.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890abcd

# Test-specific settings
# Set to true to skip Firebase auth in tests (use demo mode only)
VITE_TEST_NO_AUTH=false

# Disable telemetry in tests
VITE_DISABLE_TELEMETRY=true

# Test data retention (how long to keep test data after tests complete)
TEST_DATA_RETENTION_DAYS=1

# Enable verbose logging for debugging tests
VITE_DEBUG_TESTS=false
